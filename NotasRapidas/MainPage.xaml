<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotasRapidas.MainPage"
             Title="Notas por Categoría">

    <ScrollView>
        <Grid Padding="10"
              RowSpacing="10"
              ColumnSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Text="Administrar Categorías"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   Grid.Row="0"
                   Grid.ColumnSpan="2" />
            <Grid Grid.Row="0"
                  Grid.ColumnSpan="2"
                  Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Entry x:Name="NuevaCategoriaEntry"
                   Placeholder="Nombre nueva categoría"
                       Grid.Column="0"/>
                <Button Text="Añadir Categoría"
                        Clicked="OnAddCategoriaClicked"
                        Grid.Column="1"
                        Margin="5,0,0,0" />
            </Grid>
            <BoxView HeightRequest="1"
                     BackgroundColor="LightGray"
                     Grid.Row="1"
                     Grid.ColumnSpan="2"
                     Margin="0,10"/>
            <Entry x:Name="NotaEntry"
                   Placeholder="Escribe tu nota aqui..."
                   Grid.Row="2"
                   Grid.ColumnSpan="2"
                   Margin="0,10,0,5"/>

            <Picker x:Name="CategoriaPicker"
                    Title="Selecciona una categoría"
                    ItemsSource="{Binding Categorias}"
                    ItemDisplayBinding="{Binding Nombre}"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,5"/>

            <HorizontalStackLayout
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Spacing="10"
                HorizontalOptions="Fill">
                <Button x:Name="AddButton"
                        Text="Añadir Nota"
                        Clicked="OnAddNotaClicked"
                        HorizontalOptions="Fill" />
                <Button x:Name="UpdateButton"
                        Text="Actualizar Nota"
                        Clicked="OnUpdateNotaClicked"
                        IsEnabled="False"
                        HorizontalOptions="Fill"/>
            </HorizontalStackLayout>
            <Label Text="Mis Notas:"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   Grid.Row="5"
                   Grid.ColumnSpan="2"
                   Margin="0,15,0,5"/>

            <CollectionView x:Name="NotasCollectionView"
                            ItemsSource="{Binding Notas}"
                            SelectionMode="None"
                            Grid.Row="6"
                            Grid.ColumnSpan="2"
                            MinimumHeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               Margin="0,5"
                               BorderColor="LightGray"
                               CornerRadius="5">
                            <Grid ColumnDefinitions="*,Auto,Auto"
                                  ColumnSpacing="10">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding TextoNota}"
                                           FontSize="Body"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding CategoriaNombre, StringFormat='Categoría: {0}'}"
                                           FontSize="Small"
                                           TextColor="DarkSlateGray"/>
                                    <Label Text="{Binding FechaCreacion, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="Caption"
                                           TextColor="Gray"/>
                                </VerticalStackLayout>
                                <Button Text="Editar"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnEditNotaClicked"
                                        Grid.Column="1"
                                        BackgroundColor="LightBlue"
                                        TextColor="Black"
                                        Padding="10,5"/>
                                <Button Text="Eliminar"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnDeleteNotaClicked"
                                        Grid.Column="2"
                                        BackgroundColor="LightCoral"
                                        TextColor="Black"
                                        Padding="10,5"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout Padding="20">
                        <Label Text="No hay notas guardadas"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>

            <Label x:Name="StatusLabel"
                   Text=""
                   Grid.Row="7"
                   Grid.ColumnSpan="2"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>
        </Grid>
    </ScrollView>
</ContentPage>
